!export DBUS_SESSION_ADDRESS="unix:path=/run/user/1000/dbus-1"

!setxkbmap es

! Opciones varias
URxvt.perl-ext-common:  default,font-size,matcher
url-launcher: /usr/bin/firefox
matcher.button: 1
URxvt.font: xft:Ubuntu Mono:pixelsize=25
!URxvt.font: Dejavu Sans Mono , Awesome:pixelsize=25
Urxvt.secondaryScroll: true
URxvt.letterSpace: 0
URxvt*scrollBar: false
Xcursor.theme: hicolor
Xcursor.size: 32
URxvt.keysym.Control-Left:    \033[1;5D
URxvt.keysym.Control-Right:    \033[1;5C


!Cambio de tama√±o de fuente en el aire
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-equal:  font-size:reset
URxvt.keysym.C-slash:  font-size:show


! Opciones generales de fuentes
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight
Xft.autohint:   false
Xft.lcdfilter:  lcddefault

! Colors
URxvt*background: #111424
URxvt*foreground: #f4f4f4
! black
URxvt*color0:  #111424
URxvt*color8:  #111424
! red
URxvt*color1:  #FF0000
URxvt*color9:  #FF5454
! green
URxvt*color2:  #00ff33
URxvt*color10: #54FF54
! yellow
URxvt*color3:  #ffeb3b
URxvt*color11: #ffeb3b
! blue
URxvt*color4:  #9166ff
URxvt*color12: #9166ff
! purple
URxvt*color5:  #B218B2
URxvt*color13: #FF54FF
! cyan
URxvt*color6:  #0DF5F5
URxvt*color14: #54FFFF
! white
URxvt*color7:  #f4f4f4
URxvt*color15: #ededed
